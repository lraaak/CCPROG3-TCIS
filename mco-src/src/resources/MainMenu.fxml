<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="410.0" prefWidth="495.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">

    <!-- Title Label centered -->
    <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Trading Card Inventory System" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="20" />

    <!-- Buttons for Main Menu (Add Card, Add Deck, Add Binder, View Collection) -->
    <Button fx:id="addCardButton" onAction="#handleAddCard" text="Add Card" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="51.0" AnchorPane.topAnchor="84.0" />

    <Button fx:id="addDeckButton" onAction="#handleAddDeck" text="Add Deck" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="51.0" AnchorPane.topAnchor="126.0" />

    <Button fx:id="addBinderButton" onAction="#handleAddBinder" text="Add Binder" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="51.0" AnchorPane.topAnchor="168.0" />

    <Button fx:id="viewCollectionButton" onAction="#handleViewCollection" text="View Collection" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="51.0" AnchorPane.topAnchor="210.0" />

    <!-- VBox to hold the Manage Decks and Manage Binders buttons -->
    <VBox spacing="10" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="51.0" AnchorPane.topAnchor="250.0">
        <!-- Manage Decks and Manage Binders buttons, initially hidden -->
        <Button fx:id="ManageDecksButton" onAction="#handleManageDecks" prefHeight="30.0" prefWidth="398.0" style="-fx-font-size: 14px;" text="Manage Decks" textAlignment="CENTER" visible="false" />
        <Button fx:id="ManageBindersButton" onAction="#handleManageBinders" prefHeight="30.0" prefWidth="415.0" style="-fx-font-size: 14px;" text="Manage Binders" textAlignment="CENTER" visible="false" />
    </VBox>

    <!-- Label to display money -->
    <Label fx:id="moneyLabel" layoutX="51.0" layoutY="266.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Money: $0.00" AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="51.0" />

</AnchorPane>
