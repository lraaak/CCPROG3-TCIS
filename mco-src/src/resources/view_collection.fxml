<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewCollectionController">

    <Label text="Trading Card Collection"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"
           AnchorPane.leftAnchor="50"
           AnchorPane.rightAnchor="50"
           AnchorPane.topAnchor="20" />

    <ListView fx:id="collectionListView" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="80" AnchorPane.bottomAnchor="100" />

    <Label fx:id="emptyMessage" text="Your collection is empty."
           style="-fx-font-size: 18px; -fx-text-fill: red;"
           AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="80"/>

    <Button text="Back to Main Menu" onAction="#handleBackToMainMenu" AnchorPane.leftAnchor="50" AnchorPane.bottomAnchor="20"/>
</AnchorPane>
