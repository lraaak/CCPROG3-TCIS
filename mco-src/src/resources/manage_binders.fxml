<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="632.0" prefWidth="437.0" spacing="10"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ManageBindersController">

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Your Decks" />

    <ScrollPane prefHeight="250" prefWidth="300" style="-fx-border-color: black;">
        <ListView fx:id="bindersListView" onMouseClicked="#showBinderDetails" style="-fx-font-size: 14px;" />
    </ScrollPane>

    <TextArea fx:id="cardsTextArea" prefHeight="235.0" prefWidth="300.0"
              editable="false" wrapText="true"
              style="-fx-font-size: 14px; -fx-border-color: black;" />

    <Button fx:id="deleteBinderButton" text="Delete Binder" onAction="#deleteBinder"
            style="-fx-font-size: 14px;"/>

    <Button fx:id="backButton" text="Back to Main Menu" onAction="#handleBackToMainMenu"
            style="-fx-font-size: 14px; -fx-background-color: #ff7f7f;" />

    <Button fx:id="addCardButton" onAction="#handleAddCardToBinder"
            style="-fx-font-size: 14px;" text="Add Card to Binder" />

    <Button fx:id="removeCardButton" onAction="#handleRemoveCardFromBinder"
            style="-fx-font-size: 14px;" text="Remove Card from Binder" />

    <!-- Single area for conditional sell/trade button -->
    <StackPane>
        <Button fx:id="sellBinderButton" onAction="#sellBinder"
                style="-fx-font-size: 14px;" text="Sell Binder" visible="false"/>
        <Button fx:id="tradeCardButton" onAction="#tradeCard"
                style="-fx-font-size: 14px;" text="Trade cards" visible="false"/>
    </StackPane>

</VBox>

