<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="632.0" prefWidth="437.0" spacing="10"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ManageDecksController">

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Your Decks" />

    <ScrollPane prefHeight="250" prefWidth="300" style="-fx-border-color: black;">
        <ListView fx:id="deckListView" onMouseClicked="#showDeckDetails" style="-fx-font-size: 14px;" />
    </ScrollPane>

    <TextArea fx:id="cardsTextArea" prefHeight="235.0" prefWidth="300.0"
              editable="false" wrapText="true"
              style="-fx-font-size: 14px; -fx-border-color: black;" />

    <Button fx:id="deleteDeckButton" text="Delete Deck" onAction="#deleteDeck"
            style="-fx-font-size: 14px;"/>

    <Button fx:id="backButton" text="Back to Main Menu" onAction="#handleBackToMainMenu"
            style="-fx-font-size: 14px; -fx-background-color: #ff7f7f;" />

    <Button fx:id="sellDeckButton" onAction="#sellDeck"
            style="-fx-font-size: 14px;" text="Sell Deck" visible="false"/>

    <Button fx:id="addCardButton" onAction="#handleAddCardToDeck"
            style="-fx-font-size: 14px;" text="Add Card to Deck" />

    <Button fx:id="removeCardButton" onAction="#handleRemoveCardFromDeck"
            style="-fx-font-size: 14px;" text="Remove Card from Deck" />

</VBox>


