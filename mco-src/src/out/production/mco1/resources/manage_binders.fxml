<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="632.0" prefWidth="437.0" spacing="15" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManageBindersController">

    <!-- Title for the section -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Your Binders" />

    <!-- Grouped Binder and Cards Information -->
    <HBox spacing="20" alignment="CENTER">
        <!-- List of binders on the left side -->
        <ScrollPane prefHeight="250" prefWidth="200" style="-fx-border-color: black;">
            <ListView fx:id="bindersListView" onMouseClicked="#showBinderDetails" style="-fx-font-size: 14px;" prefWidth="180" />
        </ScrollPane>

        <!-- Cards details on the right side -->
        <VBox alignment="CENTER" spacing="10">
            <TextArea fx:id="cardsTextArea" editable="false" prefHeight="235.0" prefWidth="300.0" style="-fx-font-size: 14px; -fx-border-color: black;" wrapText="true" />

            <!-- Conditional Custom Price Section for LuxuryBinder -->
            <TextField fx:id="customPriceTextField" promptText="Enter Custom Price" visible="false" prefWidth="150" maxWidth="150" style="-fx-font-size: 14px;"/>
            <Button fx:id="setCustomPriceButton" onAction="#setCustomPrice" text="Set Custom Price" visible="false" style="-fx-font-size: 14px;"/>
        </VBox>
    </HBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="deleteBinderButton" onAction="#deleteBinder" style="-fx-font-size: 14px;" text="Delete Binder" />
        <Button fx:id="addCardButton" onAction="#handleAddCardToBinder" style="-fx-font-size: 14px;" text="Add Card to Binder" />
        <Button fx:id="removeCardButton" onAction="#handleRemoveCardFromBinder" style="-fx-font-size: 14px;" text="Remove Card from Binder" />
    </HBox>

    <!-- Conditional Sell/Trade Buttons stacked on top of each other in VBox -->
    <VBox alignment="CENTER" spacing="10">
        <Button fx:id="sellBinderButton" onAction="#sellBinder" style="-fx-font-size: 14px;" text="Sell Binder" visible="false" />
        <Button fx:id="tradeCardButton" onAction="#tradeCard" style="-fx-font-size: 14px;" text="Trade Cards" visible="false" />
    </VBox>

    <!-- Back Button -->
    <Button fx:id="backButton" onAction="#handleBackToMainMenu" style="-fx-font-size: 14px; -fx-background-color: #ff7f7f;" text="Back to Main Menu" />
</VBox>
