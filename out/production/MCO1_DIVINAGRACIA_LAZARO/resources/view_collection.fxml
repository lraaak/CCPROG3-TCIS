<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="632.0" prefWidth="437.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.ViewCollectionController">
    <!-- Title Label -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Your Collection" />

    <!-- Message when collection is empty -->
    <Label fx:id="emptyMessage" text="Your collection is empty." visible="false" />

    <!-- Scrollable ListView to display cards -->
    <ScrollPane prefHeight="200" prefWidth="300" style="-fx-border-color: black;">
        <ListView fx:id="collectionListView" onMouseClicked="#showCardDetails" style="-fx-font-size: 14px;" />
    </ScrollPane>

    <!-- TextArea to show details of the selected card -->
    <TextArea fx:id="cardDetailsArea" editable="false" prefHeight="235.0" prefWidth="300" style="-fx-font-size: 14px; -fx-padding: 10px;" />

    <!-- Button to increase card count -->
    <Button fx:id="increaseButton" onAction="#increaseCardCount" style="-fx-font-size: 14px;" text="Increase Count" />

    <!-- Button to decrease card count -->
    <Button fx:id="decreaseButton" onAction="#decreaseCardCount" style="-fx-font-size: 14px;" text="Decrease Count" />

    <Button text="Sell Card" fx:id="sellCardButton" onAction="#sellCard" style="-fx-font-size: 14px;"/>

    <!-- Back to Main Menu Button -->
    <Button fx:id="backButton" onAction="#handleBackToMainMenu" style="-fx-font-size: 14px; -fx-background-color: #ff7f7f;" text="Back to Main Menu" />
</VBox>
